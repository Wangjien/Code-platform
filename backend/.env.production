# 生产环境配置文件
# 请根据实际情况修改这些配置

# Flask环境配置
FLASK_ENV=production
FLASK_DEBUG=False

# 安全密钥（请更换为随机生成的强密钥）
SECRET_KEY=your-super-secret-production-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# 跨域配置（替换为你的实际域名）
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# 数据库配置
# 选择以下之一：

# 1. 阿里云RDS MySQL（推荐）
DATABASE_URL=mysql://username:password@your-rds-host.mysql.rds.aliyuncs.com:3306/bio_code_share

# 2. 或者ECS自建MySQL
# DATABASE_URL=mysql://app_user:secure_password@localhost:3306/bio_code_share

# 3. 或者继续使用SQLite（小规模应用）
# DATABASE_URL=sqlite:///instance/bio_code_share.db

# Redis缓存配置
REDIS_URL=redis://localhost:6379/0

# 服务器配置
HOST=0.0.0.0
PORT=5000

# JWT配置
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24小时
JWT_ERROR_MESSAGE_KEY=message

# 上传配置
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 阿里云OSS配置（可选，用于文件存储）
# ALIYUN_OSS_ACCESS_KEY_ID=your-oss-access-key-id
# ALIYUN_OSS_ACCESS_KEY_SECRET=your-oss-access-key-secret
# ALIYUN_OSS_BUCKET_NAME=your-bucket-name
# ALIYUN_OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# 邮件配置（可选，用于找回密码等功能）
# MAIL_SERVER=smtp.aliyun.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@domain.com
# MAIL_PASSWORD=your-email-password

# 监控配置（可选）
# SENTRY_DSN=https://your-sentry-dsn.sentry.io
